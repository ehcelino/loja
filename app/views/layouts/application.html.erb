<!DOCTYPE html>
<html>
  <head>
    <title>Loja</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "custom", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if current_user && current_user.admin? %>
      <nav class="navbar navbar-expand-lg" style="background-color: #ff6d38;">
    <% else %>
      <nav class="navbar navbar-expand-lg" style="background-color: #efefef;">
    <% end %>
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><%= image_tag "logo.png", class: "resize" %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="nav-item">  
                <a class="nav-link active" href="#">Logged in as <%= current_user.username %>.</a>
              </li>
              <li class="nav-item">
                <%= link_to "Log Out", logout_path, class:"nav-link active" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign Up", signup_path, class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log In", login_path, class:"nav-link active" %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link active" %>
            </li>
            <% if current_user && current_user.admin? %>
              <li class="nav-item">
                <%= link_to "Controle de produtos", admin_list_path, class:"nav-link active" %>
              </li>
            <% end %>
            <% if !session[:cart_id].nil? %>
            <li class="nav-item">
              <a href="<%=cart_path(session[:cart_id]) %>", class="nav-link active"> Carrinho de compras <span class="badge rounded-pill bg-danger">
                <%= @cart.items_quantity %>
              </span>
              </a>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

    <footer>
    <nav class="navbar navbar-expand-lg" style="background-color: #efefef;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><%= image_tag "logo.png", class: "resize" %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav">
            <% if current_user %>
              <li class="nav-item">  
                <a class="nav-link active" href="#">Logged in as <%= current_user.username %>.</a>
              </li>
              <li class="nav-item">
                <%= link_to "Log Out", logout_path, class:"nav-link active" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign Up", signup_path, class:"nav-link active" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log In", login_path, class:"nav-link active" %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
            <% if current_user %>
              <a class="nav-link active" href="#"><%= current_user.admin? %></a>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    </footer>

  </body>
</html>
