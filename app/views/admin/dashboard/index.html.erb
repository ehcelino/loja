<div class="container margins">
  <div class="row">
    <% unless flash.empty? %>
      <% flash.each do |key, value| %>
        <div id="notice" class="alert margins alert-<%= key %>"><%= value %></div>
      <% end %>
    <% end %>
  </div>
  <div class="margins row">
    <h2>Área administrativa</h2>
  </div>
  <div class="row">
    <div class="col-sm-8">
      
      <div class="border rounded shadow-sm">
        <div style="margin:20px;">
          <h3>Últimas vendas</h3>
          <div class="table-responsive">
            <table class="table table-striped table-hover table-sm">
              <% @last_3_sales.each do |sale| %> 
                <tr>
                  <td>
                  <%= sale.number %>
                  </td>
                  <td>
                  <%= sale.username %>
                  </td>
                  <td>
                  <%= number_to_currency(sale.value, unit: "R$ ", separator: ",", delimiter: ".") %>
                  </td>
                  <td>
                    <%= link_to "Detalhes", sale_path(sale) %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>

      <div class="border rounded shadow-sm">
        <div style="margin:20px;">
          <h3>Produtos em falta</h3>
          <div class="table-responsive">
            <table class="table table-striped table-hover table-sm">
              <thead>
                <tr>
                  <th scope="col">Imagem</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Estoque</th>
                  <th scope="col">Valor</th>
                  <th scope="col">Status</th>
                  
                </tr>
              </thead>
              <% @nostock.each do |product| %>
                <tr>
                  <td>
                    <% if product.images.present? %>
                      <%= image_tag product.images[0], class: "resize" %>
                    <% end %>
                  </td>
                  <td>
                    <%= product.name %>
                  </td>
                  <td>
                    <%= product.stock %>
                  </td>
                  <td>
                    <%= number_to_currency(product.price, unit: "R$ ", separator: ",", delimiter: ".") %>
                  </td>
                  <td>
                    <% if product.active? %>
                      Ativo
                    <% else %>
                      Inativo
                    <% end %>
                  </td>
                  
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>

    </div>
    <div class="col-sm-4">
      <div class="border rounded shadow-sm">
        <div style="margin:20px;">
          <ul>
            <li class="nav-item">
              <%= link_to "Controle de produtos", admin_list_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Controle de usuários", users_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Controle de vendas", admin_sales_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Nova categoria", new_category_path, class:"nav-link active" %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
