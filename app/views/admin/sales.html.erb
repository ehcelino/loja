<div class ="container margins">
  <% flash.each do |key, value| %>
    <div id="notice" class="alert margins alert-<%= key %>"><%= value %></div>
  <% end %>

  <div class="container">
    <table class="table table-striped table-hover table-sm">
      <% @sales.each do |sale| %> 
        <tr>
          <td>
          <%= sale.number %>
          </td>
          <td>
          <%= sale.user.username %>
          </td>
          <td>
          <%= number_to_currency(sale.value, unit: "R$ ", separator: ",", delimiter: ".") %>
          </td>
          <td>
             <%= link_to "Detalhes", sale_path(sale) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>