<div class ="container" style="margin-top: 20px;">
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<div class="container" style="height: 500px; padding:50px;">
<div class="container" style="width: 70%;">
<%= carousel_for(@images) %>
</div>
</div>

  <div class="container border rounded shadow" style=" padding-top: 10px; padding-bottom: 20px;">
    <div class="row">
      <div class="col-2">
      </div>
      <div class="col-8" style="text-align: center;">
      <!-- <h2>O melhor em eletr√¥nicos</h2> -->
      </div>
      <div class="col-2">
      </div>
    </div>
    <div class="wrapper" style=" display: flex; justify-content: center;">  
      <% @products.each_with_index do |product, idx| %>
        
            <div class="border rounded shadow center" style="padding-bottom: 20px; width: 200px;">
              <div class="product">
                <div style="height: 100px">
                  <% if product.images.present? %>
                    <span><%= image_tag product.images[0], class: "resize" %></span><br />
                  <% end %>
                </div>
                <div style="height: 80px;">
                  <span><%= product.name %></span><br />
                  <!-- <span><%= product.description %></span><br /> -->
                  <span><%= number_to_currency(product.price, unit: "R$ ", separator: ",", delimiter: ".") %></span><br />
                </div>
                  <span><%= link_to "Ver produto", product, class: "btn btn-primary mb-3" %></span>
                  <span><%= button_to "Comprar", line_items_path(product_id: product), class: "btn btn-primary mb-3" %></span>
                
              </div>
            </div>
        
      <% end %>
    </div>
  </div>
  <br />
  <br />
</div>

