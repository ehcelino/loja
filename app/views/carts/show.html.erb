<article class="carts">
<div class="container">
  <% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Seu carrinho de compras</h2>
  <div style="width: 40em;">
    <table class="table table-striped table-hover table-sm">
    <%= render(@cart.line_items) %>
    <tfoot>
    <tr>
    <th colspan="2">Total:</th>
    <td>
    <%= number_to_currency(@cart.total_price, unit: "R$ ", separator: ",", delimiter: ".") %>
    </td>
    </tr>
    </tfoot>
    </table>
  </div>
  <div>
  <%= button_to "Esvaziar carrinho", cart_url, method: :delete, data: {confirm: "Tem certeza?"}, class: "btn btn-primary mb-3" %>
  </div>
  <%= link_to "Continuar comprando", root_path, class: "btn btn-primary mb-3" %>
</div>
</article>