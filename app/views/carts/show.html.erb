<article class="carts">
<div class="container margins">
  <% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Seu carrinho de compras</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
    <%= render(@cart.line_items) %>
    <tfoot>
    <tr>
    <th colspan="2"><%= @cart.items_quantity %> itens, total:</th>
    <td>
    <%= number_to_currency(@cart.total_price, unit: "R$ ", separator: ",", delimiter: ".") %>
    </td>
    </tr>
    </tfoot>
    </table>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= button_to "Esvaziar carrinho", cart_url, method: :delete, data: {confirm: "Tem certeza?"}, class: "btn btn-danger mb-3" %>
    </div>
    <div class="col-md-2">
      <%= link_to "Continuar comprando", root_path, class: "btn btn-primary mb-3" %>
    </div>
    <div class="col-md-2">
      <%= link_to "Finalizar compra", checkout_path(@cart), class: "btn btn-success mb-3" %>
    </div>
</div>
</article>
