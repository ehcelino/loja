<article class="carts">
<div class="container margins">
  <% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Suas compras</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
    <%= render(@cart.line_items) %>
    <tfoot>
    <tr>
    <th colspan="2"><%= @cart.items_quantity %> itens, total:</th>
    <td>
    <%= number_to_currency(@cart.total_price, unit: "R$ ", separator: ",", delimiter: ".") %>
    </td>
    </tr>
    <tr>
    <th colspan="2">Frete:</th>
    <td>
    <%= number_to_currency(@cart.delivery_price, unit: "R$ ", separator: ",", delimiter: ".") %>
    </td>
    </tr>
    <tr>
    <th colspan="2">Total da compra:</th>
    <td>
    <% final_value = @cart.delivery_price + @cart.total_price %>
    <b><%= number_to_currency(final_value, unit: "R$ ", separator: ",", delimiter: ".") %></b>
    </td>
    </tr>
    </tfoot>
    </table>
  </div>
  <div class="container margins">
    <strong>Forma de pagamento</strong>
    <div class="container border rounded shadow margins">
      <strong>Cartão de crédito</strong>
      <p>Lógica de pagamento com cartão de crédito</p>
    </div>
    <div class="container border rounded shadow margins">
      <strong>Boleto bancário</strong>
      <p>Lógica de pagamento com boleto bancário</p>
    </div>
    <div class="container border rounded shadow margins">
      <strong>Pix</strong>
      <p>Lógica de pagamento com pix</p>
    </div>
  <div class="container margins">
    <%= link_to "Finalizar compra", final_path, class: "btn btn-success" %>
  </div>
  <!-- FINALIZAR COMPRA -->

  </div>
</div>
</article>