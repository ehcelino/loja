<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<article class="carts">
<div class="container margins">
  <% if notice %>
  <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2>Suas compras</h2>
  <div style="width: 40em;">
    <table class="table table-striped table-hover table-sm">
    <%= render(@cart.line_items) %>
    <tfoot>
    <tr>
    <th colspan="2"><%= @cart.items_quantity %> itens, total:</th>
    <td>
    <%= number_to_currency(@cart.total_price, unit: "R$ ", separator: ",", delimiter: ".") %>
    </td>
    </tr>
    <tr>
    <th colspan="2">Frete:</th>
    <td>
    <%= number_to_currency(@cart.delivery_price, unit: "R$ ", separator: ",", delimiter: ".") %>
    </td>
    </tr>
    <tr>
    <th colspan="2">Total da compra:</th>
    <td>
    <% final_value = @cart.delivery_price + @cart.total_price %>
    <b><%= number_to_currency(final_value, unit: "R$ ", separator: ",", delimiter: ".") %></b>
    </td>
    </tr>
    </tfoot>
    </table>
  </div>
  <div class="container text-center row">
    <div class="col-6">
    <h4>Forma de pagamento</h4>
    <br />
    </div>
  </div>
  <div class="container text-center row">
  <div class="col-2">
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#creditCard" aria-expanded="false" aria-controls="collapseExample">
    Cartão de crédito
  </button>
  </div>
  <div class="col-2">
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#pix" aria-expanded="false" aria-controls="collapseExample">
    Pix
  </button>
  </div>
  <div class="col-2">
  <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#bankSlip" aria-expanded="false" aria-controls="collapseExample">
    Boleto bancário
  </button>
  </div>
    <div class="collapse" id="creditCard">
    <div class="card card-body">
      Aqui entra a lógica de pagamento com cartão de crédito.
    </div>
  </div>
  <div class="collapse" id="pix">
    <div class="card card-body">
      Aqui entra a lógica de pagamento com Pix.
    </div>
  </div>
  <div class="collapse" id="bankSlip">
    <div class="card card-body">
      Aqui entra a lógica de pagamento com boleto bancário.
    </div>
  </div>


  </div>
</div>
</article>