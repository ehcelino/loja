<div class="container">
  <div class ="container" style="margin-top: 20px;">
    <div class="row border rounded shadow" style=" padding-top: 10px;">
      <div class="col">
        <h2>Cadastro de categorias</h2>
      </div>
      <%= form_with model: @category do |f| %>
        <div class="mb-3">
          <%= f.label 'Categoria', class: "form-label" %>
          <%= f.text_field :category, placeholder: 'Categoria', class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.submit "Enviar", class: "btn btn-primary mb-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
