<div class="container">
  <% flash.each do |key, value| %>
    <div id="notice" class="alert margins alert-<%= key %>"><%= value %></div>
  <% end %>
  <div class ="container margins">
    <div class="row border rounded shadow" style=" padding-top: 10px;">
      <div class="col">
        <h2>Entrar</h2>
      </div>
      <%= form_tag sessions_path do %>
        <div class="form-group" style="margin-bottom:10px;">
          <%= label_tag "UsuÃ¡rio" %><br />
          <%= text_field_tag :username, params[:username], class: "form-control" %>
        </div>
        <div class="form-group" style="margin-bottom:10px;">
          <%= label_tag "Senha" %><br />
          <%= password_field_tag :password,nil, class: "form-control" %>
        </div>
        <div class="form-group" style="margin-bottom:10px;">
          <%= label_tag "Lembrar-se de mim" %>
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        </div>
        <div class="actions"><%= submit_tag "Entrar", class: "btn btn-primary mb-3" %></div>
      <% end %>
    </div>
  </div>
</div>

