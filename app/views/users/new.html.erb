<div class="container">
  <% flash.each do |key, value| %>
    <div id="notice" class="alert margins alert-<%= key %>"><%= value %></div>
  <% end %>
  <div class ="container margins">
    <div class="row border rounded shadow" style=" padding-top: 10px;">
      <div class="col">
        <h2>Novo usuário</h2>
      </div>

      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages alert alert-danger" role="alert">
            <h3 class="alert-heading">Atenção</h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label "Usuário", class: "form-label" %><br />
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Nome completo", class: "form-label" %><br />
          <%= f.text_field :fullname, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Email", class: "form-label" %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Endereço", class: "form-label" %><br />
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Cidade", class: "form-label" %><br />
          <%= f.text_field :city, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "CEP", class: "form-label" %><br />
          <%= f.text_field :zip, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Senha", class: "form-label" %><br />
          <%= f.password_field :password, class: "form-control", id: "password" %>
        </div>
        <div class="mb-3">
          <%= f.label "Repita a senha", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
        </div>
        <div class="mb-3">
          <%= f.label 'Admin', class: "form-label" %>
          <%= f.check_box :admin %>
        </div>
        <div class="mb-3"><%= f.submit "Enviar", class: "btn btn-primary mb-3", id: "submit" %></div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.querySelector("#submit").addEventListener("click", function(event) {
    var password = document.querySelector("#password");
    var retypePassword = document.querySelector("#password_confirmation");
    if (password.value !== retypePassword.value) {
      event.preventDefault();
      password.classList.add("error");
      retypePassword.classList.add("error");
      alert("As senhas não são iguais. Tente novamente.");
    }
  });
</script>