<div class="container">
  <div class ="container" style="margin-top: 20px; margin-bottom: 20px">
    <div class="row border rounded shadow" style=" padding-top: 10px;">
      <div class="col">
        <h2>Novo usuário</h2>
      </div>

      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label "Usuário", class: "form-label" %><br />
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Email", class: "form-label" %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Senha", class: "form-label" %><br />
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label "Repita a senha", class: "form-label" %><br />
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="mb-3"><%= f.submit "Sign Up", class: "btn btn-primary mb-3" %></div>
      <% end %>
    </div>
  </div>
</div>

